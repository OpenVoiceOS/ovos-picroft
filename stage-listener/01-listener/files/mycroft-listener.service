[Unit]
Description=Mycroft Listener
PartOf=mycroft.service
After=mycroft.service
After=mycroft-messagebus.service

[Service]
Type=notify
ExecStart=%h/.venv/bin/python /usr/libexec/mycroft-systemd-listener
TimeoutStartSec=1m
TimeoutStopSec=1m
Restart=on-failure
StartLimitInterval=5min
StartLimitBurst=4

[Install]
WantedBy=mycroft.service

